# Plataforma e uso de frameworks
platform :ios, '13.0'
use_frameworks!

# Função capacitor_pods embutida para garantir que esteja sempre disponível
def capacitor_pods
  # Adiciona os pods essenciais do Capacitor
  pod 'CapacitorCordova', :path => '../../node_modules/@capacitor/ios'
  pod 'Capacitor', :path => '../../node_modules/@capacitor/ios'
  pod 'CapacitorApp', :path => '../../node_modules/@capacitor/app'
  pod 'CapacitorHaptics', :path => '../../node_modules/@capacitor/haptics'
  pod 'CapacitorKeyboard', :path => '../../node_modules/@capacitor/keyboard'
  pod 'CapacitorStatusBar', :path => '../../node_modules/@capacitor/status-bar'
end

# Hook para ser executado ANTES da instalação dos Pods
pre_install do |installer|
  # Chama a função capacitor_pods que acabamos de definir
  capacitor_pods
end

target 'App' do
  # Adiciona o RevenueCat via CocoaPods
  pod 'RevenueCat', '5.59.2'
end

# Hook para ser executado DEPOIS da instalação dos Pods
post_install do |installer|
  # Itera sobre cada dependência (target) do projeto de Pods
  installer.pods_project.targets.each do |target|
    # Itera sobre cada configuração de build (Debug, Release, etc.)
    target.build_configurations.each do |config|
      # 1. Força o Team ID em TODAS as dependências para unificar a assinatura
      config.build_settings['DEVELOPMENT_TEAM'] = 'CASJQDDA7L'
      
      # 2. Desabilita a assinatura automática em TODAS as dependências (A CAUSA DO ERRO ORIGINAL)
      config.build_settings['CODE_SIGN_STYLE'] = 'Manual'
      
      # 3. Define a identidade de assinatura para Distribuição em TODAS as dependências
      config.build_settings['CODE_SIGN_IDENTITY'] = 'Apple Distribution'
      
      # 4. Define o Provisioning Profile para TODAS as dependências
      config.build_settings['PROVISIONING_PROFILE_SPECIFIER'] = 'BibliaToonKIDS_AppStore_Final'
      
      # 5. Garante a herança de configurações para evitar avisos de biblioteca
      config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = '$(inherited)'
      
      # 6. Desabilita Bitcode para evitar erros de compilação
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end


